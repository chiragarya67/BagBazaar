    <% let grandTotal = 0; %>

    <div class="grid grid-cols-3 gap-6">
        <% user.cart.forEach(function(item){ 
            let platformFee = 20;
            let itemTotal = item.price - item.discount + platformFee;
            grandTotal += itemTotal;
        %>
